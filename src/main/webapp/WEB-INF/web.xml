<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >


<web-app>
    <display-name>Archetype Created Web Application</display-name>
    <context-param>
        <param-name>url</param-name>
        <param-value>jdbc:mariadb://localhost/virtualshop</param-value>
    </context-param>
    <context-param>
        <param-name>username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>password</param-name>
        <param-value>blogPass</param-value>
    </context-param>


    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>org.itstep.servlet.HomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>org.itstep.servlet.SignUpServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>org.itstep.servlet.RegistrationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>products</servlet-name>
        <servlet-class>org.itstep.servlet.ProductsServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>order</servlet-name>
        <servlet-class>org.itstep.servlet.OrderServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/resources/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>products</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>order</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

</web-app>
